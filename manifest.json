{
	"manifest_version": 2,

	"name": "MC-Viewer",
	"description": "Easy way to know who's connected on http://mc-viewer.bendem.be/",
	"version": "0.1",

	"permissions": [
		"http://mc-viewer.bendem.be/",
		"notifications",
		"alarms"
	],

	"background": {
		"scripts": ["js/updateViewer.js"],
		"persistent": false
	},

	"browser_action": {
		"default_icon": "img/logo.png",
		"default_popup": "main.html"
	}
}
